{
  "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
  "files": {
    "ignore": [
      "node_modules/**",
      "build/**",
      "dist/**",
      "**/*.js",
      "**/*.jsx"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "useSimplifiedLogicExpression": "off",
        "useFlatMap": "warn",
        "noForEach": "off"
      },
      "style": {
        "noUnusedTemplateLiteral": "warn",
        "noUselessElse": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noRedeclare": "off",
        "noThenProperty": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useKeyWithMouseEvents": "off",
        "useValidAnchor": "off",
        "useAnchorContent": "off",
        "useMediaCaption": "off"
      },
      "performance": {
        "noAccumulatingSpread": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "none",
      "jsxQuoteStyle": "single"
    }
  },
  "organizeImports": {
    "enabled": false
  }
}